// Database package - exports Prisma client
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// ENUMS
// ============================================

enum Role {
  CITIZEN
  ADMIN
  STAFF
}

enum ServiceType {
  ELECTRICITY
  GAS
  WATER
  MUNICIPAL
}

enum ConnectionStatus {
  PENDING
  ACTIVE
  SUSPENDED
  DISCONNECTED
}

enum BillStatus {
  UNPAID
  PAID
  OVERDUE
  PARTIAL
}

enum PaymentStatus {
  PENDING
  SUCCESS
  FAILED
  REFUNDED
}

enum PaymentMethod {
  UPI
  CARD
  NET_BANKING
  WALLET
  CASH
}

enum GrievanceStatus {
  SUBMITTED
  IN_PROGRESS
  RESOLVED
  CLOSED
  REJECTED
}

enum GrievancePriority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

enum NotificationType {
  BILL_DUE
  PAYMENT_SUCCESS
  OUTAGE_ALERT
  GRIEVANCE_UPDATE
  SERVICE_UPDATE
  EMERGENCY
}

// ============================================
// USER & AUTH
// ============================================

model User {
  id          String   @id @default(cuid())
  phone       String   @unique
  email       String?  @unique
  aadhaarHash String? // Hashed Aadhaar for verification
  name        String
  address     String?
  city        String?
  state       String?
  pincode     String?
  role        Role     @default(CITIZEN)
  language    String   @default("en") // en, hi
  isVerified  Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  connections     ServiceConnection[]
  bills           Bill[]
  payments        Payment[]
  grievances      Grievance[]
  notifications   Notification[]
  gasBookings     GasBooking[]
  documents       Document[]
  sessions        Session[]
  properties      Property[]
  civicComplaints CivicComplaint[]
  // NEW: Added from master branch
  serviceRequests ServiceRequest[]
  sigmLogs        SIGMLog[]
  requestLocks    RequestLock[]
  backendActions  BackendActionQueue[]

  @@index([phone])
  @@index([email])
}

model Session {
  id           String   @id @default(cuid())
  userId       String
  token        String   @unique
  refreshToken String   @unique
  kioskId      String? // Track which kiosk was used
  expiresAt    DateTime
  createdAt    DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([token])
  @@index([userId])
}

// ============================================
// SERVICE CONNECTIONS
// ============================================

model ServiceConnection {
  id              String           @id @default(cuid())
  userId          String
  serviceType     ServiceType
  connectionNo    String           @unique
  meterNo         String?
  status          ConnectionStatus @default(PENDING)
  address         String
  city            String
  state           String
  pincode         String
  sanctionedLoad  Float? // For electricity (in kW)
  loadType        String? // "RESIDENTIAL", "COMMERCIAL", "INDUSTRIAL"
  phase           String? // "SINGLE", "THREE" - for electricity
  // Gas Fields
  provider        GasProvider?
  agency          String? // Gas agency name
  cylinders       Int?             @default(1) // 1 (Single) or 2 (Double/DBC)
  connectionDate  DateTime?
  lastReadingDate DateTime?
  lastReading     Float?
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt

  user            User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  bills           Bill[]
  meterReadings   MeterReading[]
  grievances      Grievance[]
  gasBookings     GasBooking[]
  documents       Document[]
  serviceRequests ServiceRequest[] // NEW: Added from master

  @@index([userId])
  @@index([connectionNo])
  @@index([serviceType])
}

model MeterReading {
  id           String   @id @default(cuid())
  connectionId String
  reading      Float
  readingDate  DateTime
  submittedBy  String // "CITIZEN" or "STAFF"
  imageUrl     String? // Photo of meter reading
  isVerified   Boolean  @default(false)
  createdAt    DateTime @default(now())

  connection ServiceConnection @relation(fields: [connectionId], references: [id], onDelete: Cascade)

  @@index([connectionId])
}

// ============================================
// BILLING & PAYMENTS
// ============================================

model Bill {
  id            String     @id @default(cuid())
  userId        String
  connectionId  String
  billNo        String     @unique
  billDate      DateTime
  dueDate       DateTime
  periodFrom    DateTime
  periodTo      DateTime
  unitsConsumed Float?
  amount        Float
  lateFee       Float      @default(0)
  totalAmount   Float
  amountPaid    Float      @default(0)
  status        BillStatus @default(UNPAID)
  pdfUrl        String?
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt

  user       User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  connection ServiceConnection @relation(fields: [connectionId], references: [id], onDelete: Cascade)
  payments   Payment[]

  @@index([userId])
  @@index([connectionId])
  @@index([status])
  @@index([dueDate])
}

model Payment {
  id              String        @id @default(cuid())
  userId          String
  billId          String
  amount          Float
  method          PaymentMethod
  status          PaymentStatus @default(PENDING)
  transactionId   String?       @unique
  gatewayResponse Json?
  receiptNo       String?       @unique
  receiptUrl      String?
  kioskId         String?
  paidAt          DateTime?
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  bill Bill @relation(fields: [billId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([billId])
  @@index([status])
  @@index([transactionId])
}

// ============================================
// GRIEVANCES
// ============================================

model Grievance {
  id           String            @id @default(cuid())
  userId       String
  connectionId String?
  ticketNo     String            @unique
  serviceType  ServiceType
  category     String // e.g., "Billing Issue", "Outage", "New Connection"
  subject      String
  description  String
  priority     GrievancePriority @default(MEDIUM)
  status       GrievanceStatus   @default(SUBMITTED)
  assignedTo   String? // Staff user ID
  resolvedAt   DateTime?
  resolution   String?
  createdAt    DateTime          @default(now())
  updatedAt    DateTime          @updatedAt

  user        User                @relation(fields: [userId], references: [id], onDelete: Cascade)
  connection  ServiceConnection?  @relation(fields: [connectionId], references: [id])
  timeline    GrievanceTimeline[]
  attachments Document[]

  @@index([userId])
  @@index([ticketNo])
  @@index([status])
  @@index([serviceType])
}

model GrievanceTimeline {
  id          String   @id @default(cuid())
  grievanceId String
  action      String
  description String
  actionBy    String // User ID or "SYSTEM"
  createdAt   DateTime @default(now())

  grievance Grievance @relation(fields: [grievanceId], references: [id], onDelete: Cascade)

  @@index([grievanceId])
}

// ============================================
// NOTIFICATIONS
// ============================================

model Notification {
  id        String           @id @default(cuid())
  userId    String
  type      NotificationType
  title     String
  titleHi   String? // Hindi title
  message   String
  messageHi String? // Hindi message
  data      Json? // Additional payload
  isRead    Boolean          @default(false)
  readAt    DateTime?
  createdAt DateTime         @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([isRead])
  @@index([type])
}

// System-wide alerts (outages, emergencies)
model SystemAlert {
  id           String      @id @default(cuid())
  serviceType  ServiceType
  title        String
  titleHi      String?
  message      String
  messageHi    String?
  affectedArea String? // Pincode or area name
  severity     String // "info", "warning", "critical"
  isActive     Boolean     @default(true)
  startsAt     DateTime
  endsAt       DateTime?
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt

  @@index([serviceType])
  @@index([isActive])
}

// ============================================
// DOCUMENTS
// ============================================

model Document {
  id          String   @id @default(cuid())
  userId      String
  grievanceId String?
  name        String
  type        String // "ID_PROOF", "ADDRESS_PROOF", "RECEIPT", "CERTIFICATE"
  mimeType    String
  url         String
  size        Int
  createdAt   DateTime @default(now())

  user                User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  grievance           Grievance?         @relation(fields: [grievanceId], references: [id])
  ServiceConnection   ServiceConnection? @relation(fields: [serviceConnectionId], references: [id])
  serviceConnectionId String?

  @@index([userId])
  @@index([grievanceId])
}

// ============================================
// KIOSK MANAGEMENT
// ============================================

model Kiosk {
  id         String    @id @default(cuid())
  name       String
  location   String
  address    String
  city       String
  state      String
  pincode    String
  isOnline   Boolean   @default(true)
  lastPingAt DateTime?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  logs KioskLog[]

  @@index([isOnline])
}

model KioskLog {
  id        String   @id @default(cuid())
  kioskId   String
  action    String // "LOGIN", "PAYMENT", "GRIEVANCE", "PRINT"
  userId    String?
  details   Json?
  createdAt DateTime @default(now())

  kiosk Kiosk @relation(fields: [kioskId], references: [id], onDelete: Cascade)

  @@index([kioskId])
  @@index([createdAt])
}

// ============================================
// ELECTRICITY TARIFF MANAGEMENT
// ============================================

model Tariff {
  id          String      @id @default(cuid())
  serviceType ServiceType
  loadType    String // "RESIDENTIAL", "COMMERCIAL", "INDUSTRIAL"
  slabStart   Float // Units from (e.g., 0)
  slabEnd     Float? // Units to (e.g., 100, null for unlimited)
  ratePerUnit Float // Rate in rupees
  fixedCharge Float       @default(0) // Monthly fixed charge
  isActive    Boolean     @default(true)
  validFrom   DateTime    @default(now())
  validTo     DateTime?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  @@index([serviceType, loadType, isActive])
}

// ============================================
// BACKGROUND JOB QUEUE
// ============================================

enum JobStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
}

model Job {
  id          String    @id @default(cuid())
  type        String // "GENERATE_BILLS", "SEND_NOTIFICATIONS", etc.
  payload     Json? // Job-specific data
  status      JobStatus @default(PENDING)
  attempts    Int       @default(0)
  maxAttempts Int       @default(3)
  error       String?
  scheduledAt DateTime  @default(now())
  startedAt   DateTime?
  completedAt DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([status, scheduledAt])
  @@index([type])
}

// ============================================
// GAS SERVICE
// ============================================

enum GasProvider {
  INDANE
  HP_GAS
  BHARAT_GAS
}

enum BookingStatus {
  BOOKED
  DISPATCHED
  OUT_FOR_DELIVERY
  DELIVERED
  CANCELLED
  FAILED
}

model GasBooking {
  id            String        @id @default(cuid())
  userId        String
  connectionId  String
  bookingId     String        @unique // e.g., GAS-2024-XXX
  bookingDate   DateTime      @default(now())
  status        BookingStatus @default(BOOKED)
  deliveryDate  DateTime?
  amount        Float
  subsidyAmount Float?        @default(0)
  otp           String? // Delivery OTP
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  user       User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  connection ServiceConnection @relation(fields: [connectionId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([connectionId])
  @@index([status])
}

// ============================================
// MUNICIPAL SERVICE
// ============================================

enum PropertyType {
  RESIDENTIAL
  COMMERCIAL
  INDUSTRIAL
  AGRICULTURAL
}

enum ComplaintCategory {
  STREETLIGHT
  ROAD_REPAIR
  DRAINAGE
  SANITATION
  WATER_SUPPLY
  GARBAGE
  OTHER
}

enum ComplaintStatus {
  OPEN
  ASSIGNED
  IN_PROGRESS
  RESOLVED
  CLOSED
}

model Property {
  id           String       @id @default(cuid())
  userId       String
  propertyId   String       @unique // e.g., PROP-GHY-2024-001
  propertyType PropertyType @default(RESIDENTIAL)
  address      String
  ward         String? // Ward number
  area         Float // Area in sq ft
  city         String
  state        String
  pincode      String
  isVerified   Boolean      @default(false)
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt

  user       User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  taxRecords PropertyTax[]

  @@index([userId])
  @@index([propertyId])
}

model PropertyTax {
  id            String     @id @default(cuid())
  propertyId    String
  financialYear String // e.g., "2024-25"
  baseAmount    Float // Calculated tax
  surcharge     Float      @default(0)
  discount      Float      @default(0) // Early payment discount
  totalAmount   Float
  amountPaid    Float      @default(0)
  status        BillStatus @default(UNPAID)
  dueDate       DateTime
  paidAt        DateTime?
  receiptNo     String?
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt

  property Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)

  @@unique([propertyId, financialYear])
  @@index([propertyId])
  @@index([status])
}

model CivicComplaint {
  id          String            @id @default(cuid())
  userId      String
  complaintNo String            @unique // e.g., CMP-2024-001234
  category    ComplaintCategory
  subject     String
  description String
  location    String // Address or landmark
  latitude    Float?
  longitude   Float?
  imageUrl    String?
  priority    GrievancePriority @default(MEDIUM)
  status      ComplaintStatus   @default(OPEN)
  assignedTo  String? // Staff ID
  resolvedAt  DateTime?
  resolution  String?
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([complaintNo])
  @@index([category])
  @@index([status])
}

// ============================================
// SERVICE REQUESTS (from master branch)
// ============================================

enum RequestStatus {
  SUBMITTED
  IN_PROGRESS
  APPROVED
  REJECTED
  COMPLETED
}

model ServiceRequest {
  id           String        @id @default(cuid())
  userId       String
  connectionId String?
  type         String // "NAME_CHANGE", "LOAD_CHANGE", "DISCONNECTION", "METER_TEST"
  status       RequestStatus @default(SUBMITTED)
  category     String? // "IDENTITY", "LOAD", "TECHNICAL", "OTHER"
  data         Json // Details of the request
  description  String?
  assignedTo   String? // Staff user ID
  resolvedAt   DateTime?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt

  user       User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  connection ServiceConnection? @relation(fields: [connectionId], references: [id])

  @@index([userId])
  @@index([connectionId])
  @@index([status])
  @@index([type])
}

// ============================================
// SINGLE-INTERACTION GUARANTEE MODE (SIGM) - from master branch
// ============================================

enum GuaranteeStatus {
  GUARANTEED // Request will be completed without repeat visits
  NOT_GUARANTEED // Additional backend action required but no re-application needed
  BLOCKED // Cannot proceed - requires citizen action
}

enum SIGMRequestType {
  BILL_PAYMENT
  NEW_CONNECTION
  COMPLAINT_REGISTRATION
  DOCUMENT_REQUEST
  METER_READING
}

enum BackendActionStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
  FAILED
}

// SIGM check log for every request
model SIGMLog {
  id                  String          @id @default(cuid())
  userId              String
  kioskId             String?
  requestType         SIGMRequestType
  serviceType         ServiceType
  guaranteeStatus     GuaranteeStatus
  blockingReasons     Json? // Array of blocking reasons with citizen-friendly messages
  checkDetails        Json? // Full validation details for debugging
  citizenAcknowledged Boolean         @default(false)
  acknowledgedAt      DateTime?
  requestSubmitted    Boolean         @default(false)
  submittedAt         DateTime?
  requestId           String? // Link to the actual request (payment, grievance, connection, etc.)
  createdAt           DateTime        @default(now())

  user           User                 @relation(fields: [userId], references: [id], onDelete: Cascade)
  backendActions BackendActionQueue[]

  @@index([userId])
  @@index([createdAt])
  @@index([guaranteeStatus])
  @@index([requestType])
  @@index([serviceType])
}

// Request Lock - Prevents duplicate submission for same service/consumer
model RequestLock {
  id          String          @id @default(cuid())
  userId      String
  serviceType ServiceType
  requestType SIGMRequestType
  lockKey     String          @unique // Composite key: userId_serviceType_requestType_identifier
  lockedAt    DateTime        @default(now())
  expiresAt   DateTime // Locks expire after certain period
  requestId   String? // Reference to the created request
  isActive    Boolean         @default(true)

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([lockKey])
  @@index([isActive])
  @@index([expiresAt])
}

// Backend Action Queue - For non-guaranteed requests that need backend follow-up
model BackendActionQueue {
  id               String              @id @default(cuid())
  sigmLogId        String
  userId           String
  serviceType      ServiceType
  requestType      SIGMRequestType
  actionRequired   String // Human-readable action description
  actionRequiredHi String? // Hindi translation
  actionDetails    Json? // Technical details for backend processing
  priority         Int                 @default(5) // 1 = highest, 10 = lowest
  status           BackendActionStatus @default(PENDING)
  assignedTo       String? // Staff/technician ID
  scheduledFor     DateTime? // When the action is scheduled
  completedAt      DateTime?
  notes            String?
  createdAt        DateTime            @default(now())
  updatedAt        DateTime            @updatedAt

  sigmLog SIGMLog @relation(fields: [sigmLogId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([status])
  @@index([priority])
  @@index([scheduledFor])
  @@index([sigmLogId])
}
